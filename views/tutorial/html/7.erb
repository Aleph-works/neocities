<script>
  function checkHomework(editor) {
    var html = editor.val()

    /* TODO: Make .+ ignore any spaces or newlines or whatever. </a> lol </p> is fine too. */
    var match = '<html>.+<body>.+<ul>.+<li>.+</li>.+</ul>.+</body>.+</html>'
    var re = new XRegExp(match, 'gis')

